@model CrudEmployee.ViewModel.EmployeeViewModel


<div class="container shadow p-5">
    <div class="row justify-content-centre">
        <h2 class="text-centre">ADDEmployee</h2>
    </div>

    <form method="post">

        <div class="form-row hover">
            <div class="form-group col-md-6">
                <label asp-for="Name">Name</label>
                <input type="text" class="form-control mb-3" asp-for="Name" placeholder="Enter Name">
                <span asp-validation-for="Name" class=" alert-danger"></span>
            </div>
           
            <div class="form-group col-md-6">
                <label asp-for="Phone">Phone</label>
                <input type="text" class="form-control mb-3" asp-for="Phone" placeholder="Enter Phone">
                <span asp-validation-for="Phone" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Email">Email</label>
                <input type="text" class="form-control mb-3" asp-for="Email" placeholder="Enter Email">
                <span asp-validation-for="Email" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Salary">Salary</label>
                <input type="text" class="form-control mb-3" asp-for="Salary" placeholder="Enter Salary">
                <span asp-validation-for="Salary" class=" alert-danger"></span>
            </div>
            <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Submit</button>
           
           
        </div>
    </form>
</div>


